

<div class="mb-3">
    <div class="alert alert-primary d-flex align-items-center mt-5" role="alert">
        <span class="fw-bold">Yoda : &nbsp;</span>
        <div>
            @ViewBag.ResponseMessage
        </div>
    </div>
</div>

<div class="mb-3 d-flex justify-content-center ">
    <img src="img/yoda.png" class="img-fluid center" alt="yoda" style="max-height:300px;">
</div>
<div class="mb-3">
    <label class="mb-3">Type your text below to convert to Yodish using our Yoda Speak translator</label>
    <textarea class="form-control" id="translateText" rows="3"></textarea>
</div>
<div class="mb-3 d-flex justify-content-end">
    <button type="submit" class="btn btn-success mb-3">Translate</button>
</div>
